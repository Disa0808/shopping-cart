<div class="row">
    <div class="col-md-6 m-auto">
        <div class="card card-outline-secondary">
            <div class="card-body">
                <h3 class="text-center">Credit Card Payment</h3>
                <h4>Your Total ${{ total }}</h4>
                <div id="charge-error" class="alert alert-danger" {{#if noErrors }}hidden{{/if}}>
                    {{errMsg}}
                </div>
                <hr>
                <form class="form" role="form" id="checkout-form" method="POST" action="/checkout">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" title="Your First and last name" required name="name">
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" title="Address" required name="address">
                    </div>   
                    <div class="form-group">
                        <label for="cart-name">Card Holder Name</label>
                        <input type="text" class="form-control" id="cart-name" required>
                    </div>                      
                    <div class="form-group">
                        <label for="card-number">Credit Card Number</label>
                        <input type="text" id="card-number" class="form-control"  title="Credit card number" required="">
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="card-expire-month">Credit Card Expire Month</label>
                                <input type="text" id="card-expire-month" class="form-control" required>
                            </div>                    
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="card-expire-year">Credit Card Expire Year</label>
                                <input type="text" id="card-expire-year" class="form-control" required>
                            </div>                       
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="card-cvc">CVC</label>
                        <input type="text" id="card-cvc" class="form-control"  title="Credit card cvc" required="">
                    </div>                    
                    <hr>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-default btn-lg btn-block">Cancel</button>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success btn-lg btn-block">Pay</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
<script src="https://js.stripe.com/v2/"></script>
<script src="javascripts/checkout.js"></script>